{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Mr. Bill Server",
      "program": "${workspaceRoot}/server/server.js",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    },
    {
      "type": "pwa-node",
      "request": "launch",
      "name": "Node.js Quickstart",
      "program": "${workspaceRoot}/index.js",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/**",
        "!**/node_modules/**"
      ]
    }
  ]
}
